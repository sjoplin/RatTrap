    <TextView
        android:id="@+id/NameText"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Name:"
        android:textSize="36sp" />
</GridLayout>